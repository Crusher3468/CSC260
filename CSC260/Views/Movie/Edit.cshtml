@model Movie

<form method="post" asp-controller="Movie" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Movie</h2>
			<hr/>
		</div>
		<div class=" mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control"/>
		</div>
		<div class=" mb-3">
			<label asp-for="Year"></label>
			<input asp-for="Year" class="form-control" />
		</div>
		<div class=" mb-3">
			<label asp-for="Rating"></label>
			<input asp-for="Rating" class="form-control"/>
		</div>
		<button type="submit" class="btn btn-primary">Update</button>
		<a asp-controller="Movie" asp-action="MultMovies" class="btn btn-primary">
			Back to Movie List
		</a>
	</div>
</form>
<form method="post" asp-controller="Movie" asp-action="Delete">
	<button type="submit" class="btn btn-primary">Delete</button>
</form>
