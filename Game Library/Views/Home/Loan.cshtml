@model Game

@{
	<form asp-controller="Home" asp-action="Loan" method="post">
		<div class="card border-danger p-3">
			<div class="row pb-2">
				<h2 class="text-primary">Loan Game</h2>
				<hr />
			</div>
			<div class="mb-3">
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="LoanedTo">Loaned to</label>
				<input asp-for="LoanedTo" class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="LoanedDate"> Loan Date</label>
				<input asp-for="LoanedDate" class="form-control" />
			</div>
			<button type="submit" class="btn btn-primary">
				Loan
			</button>
			<a asp-controller="Home" asp-action="Collection" class="btn btn-secondary">Collection</a>
		</div>
	</form>
}

