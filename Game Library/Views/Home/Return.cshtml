@model Game

@{
	<form asp-controller="Home" asp-action="Return" method="post">
		<div class="card border-danger p-3">
			<div class="row pb-2">
				<h2 class="text-primary">Return Game</h2>
				<hr />
				<div class="mb-3">
					<label asp-for="Title"></label>
					<input asp-for="Title" class="form-control" />
				</div>
				<button type="submit" class="btn btn-primary">
					Return
				</button>
				<a asp-controller="Home" asp-action="Collection" class="btn btn-secondary">Collection</a>
			</div>
		</div>
	</form>
}
